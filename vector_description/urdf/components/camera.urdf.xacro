<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <macro name="camera" params="link_name *origin">
        <link name="${link_name}"/>
        <joint name="${link_name}_joint" type="fixed">
            <parent link="head"/>
            <child link="${link_name}"/>
            <xacro:insert_block name="origin"/>
        </joint>
    </macro>

</robot>